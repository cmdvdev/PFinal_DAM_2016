package es.crimarde.core.controller;

import java.util.ArrayList;
import java.util.List;

import org.junit.Test;
import org.mockito.Mock;

import es.crimarde.negocio.BookDTO;
import es.crimarde.service.Service;

public class ControllerTest {

	@Mock private Service servicio;
	
	@Test
	public void responseList(){
		
	}
	
	
	private List<BookDTO> biuldBookList(){
		
		List<BookDTO> lista = new ArrayList<>();
		
		BookDTO book1 = new BookDTO().builder()
				.whithId(1)
				.whithAutor("autor1")
				.whithPrecio(1.00)
				.whithSinopsis("resumen libro 1")
				.whithTitulo("Titulo1")
				.whithImagen(null)
				.build();
		
		BookDTO book2 = new BookDTO().builder()
				.whithId(2)
				.whithAutor("autor2")
				.whithPrecio(2.00)
				.whithSinopsis("resumen libro 2")
				.whithTitulo("Titulo2")
				.whithImagen(null)
				.build();
		
		
		lista.add(book1);
	}
	
	private BookDTO buildBook(int order){
		BookDTO book1 = new BookDTO().builder()
				.whithId(1)
				.whithAutor("autor".concat(String.valueOf(order)))
				.whithPrecio(1.00)
				.whithSinopsis("resumen libro 1")
				.whithTitulo("Titulo1")
				.whithImagen(null)
				.build();
		
		return book1;
	}
}
