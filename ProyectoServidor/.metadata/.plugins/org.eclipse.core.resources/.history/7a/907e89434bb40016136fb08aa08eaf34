        return Arrays.asList("add");
    }
    
    @RequestMapping("/delete")
    public java.util.List<TestResponse> delete(@RequestParam(value="name", defaultValue="Usuario") String name) {
        return new TestResponse(String.format(template, name), Status.SUCCESS.getDesc());
    }
    
    @RequestMapping("/edit")
    public java.util.List<TestResponse> edit(@RequestParam(value="name", defaultValue="Usuario") String name) {
        return new TestResponse(String.format(template, name), Status.SUCCESS.getDesc());
    }
    
    @RequestMapping("/retrieve")
    public java.util.List<TestResponse> retrieve(@RequestParam(value="name", defaultValue="Usuario") String name) {
        return new TestResponse(String.format(template, name), Status.SUCCESS.getDesc());
    }
}