package es.crimarde.core.aspectos;

import org.aspectj.lang.ProceedingJoinPoint;
import org.aspectj.lang.annotation.Around;
import org.aspectj.lang.annotation.Aspect;
import org.springframework.stereotype.Component;

@Aspect
@Component
public class Aspecto {

	@Around("execution(* es.crimarde.core.controllera.*.*())")
	public void tiempoPasado(ProceedingJoinPoint punto) throws Throwable {

		System.out.println("****LoggingAspect.logAroundAllMethods() : " + punto.getSignature().getName() + ": Before Method Execution");
        try {
        	punto.proceed();
        } finally {
            //Do Something useful, If you have
        }
        System.out.println("****LoggingAspect.logAroundAllMethods() : " + punto.getSignature().getName() + ": After Method Execution");

	}
}