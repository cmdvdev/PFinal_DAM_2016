package es.crimarde.dao;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.IntegrationTest;
import org.springframework.test.context.ActiveProfiles;
import org.springframework.test.context.TestPropertySource;
import org.springframework.test.context.junit4.SpringJUnit4ClassRunner;

import es.crimarde.model.Book;

@ActiveProfiles("test")
@TestPropertySource("classpath:aplication-test.properties")
@RunWith(SpringJUnit4ClassRunner.class)
@IntegrationTest
public class BookRepositoryTest {

	@Autowired
	private BookRepository repositorio;
	
	@Test
	public void prueba(){
		Book book = repositorio.findOne(1);
		System.out.println(book.getTitulo());
	}
}
